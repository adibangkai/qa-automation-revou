pipeline {
    agent any

    tools {
        maven 'maven'
        jdk 'JDK17'
    }

    parameters {
        booleanParam(name: 'RUN_API_TESTS', defaultValue: true, description: 'Run API Tests')
        booleanParam(name: 'RUN_WEB_TESTS', defaultValue: true, description: 'Run Web Tests')
        booleanParam(name: 'RUN_MOBILE_TESTS', defaultValue: false, description: 'Run Mobile Tests')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Project') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }

        stage('API Tests') {
            when { expression { params.RUN_API_TESTS } }
            steps {
                dir('api-tests') {
                    sh 'mvn clean test'
                }
            }
            post {
                always {
                    archiveArtifacts(
                        artifacts: 'api-tests/target/api/cucumber-reports/**/*',
                        allowEmptyArchive: true,
                        fingerprint: true
                    )
                    junit 'api-tests/target/api/cucumber-reports/cucumber.xml'
                }
            }
        }

        stage('Web Tests') {
            when { expression { params.RUN_WEB_TESTS } }
            steps {
                dir('web-tests') {
                    sh 'mvn clean test'
                }
            }
            post {
                always {
                    archiveArtifacts(
                        artifacts: 'web-tests/target/cucumber-reports/**/*',
                        allowEmptyArchive: true,
                        fingerprint: true
                    )
                }
            }
        }

        stage('Mobile Tests') {
            when { expression { params.RUN_MOBILE_TESTS } }
            steps {
                dir('mobile-tests') {
                    sh 'mvn clean test'
                }
            }
            post {
                always {
                    archiveArtifacts(
                        artifacts: 'mobile-tests/target/cucumber-reports/mobile/**/*',
                        allowEmptyArchive: true,
                        fingerprint: true
                    )
                }
            }
        }
    }

    post {
        always {
            echo 'Test execution completed'

            // Publish all Cucumber reports
            cucumber(
                fileIncludePattern: '**/*cucumber.json',
                jsonReportDirectory: 'target',
                sortingMethod: 'ALPHABETICAL',
                buildStatus: 'UNSTABLE'
            )
        }
        success {
            echo 'All tests completed successfully!'
        }
        failure {
            echo 'Test execution failed. Please check the logs for details.'
        }
    }
}