<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sauce Demo Complete Test Suite" parallel="classes" thread-count="3">
    <test name="Standard User Tests">
        <parameter name="userType" value="STANDARD_USER"/>
        <classes>
            <class name="com.automation.web.tests.LoginTest"/>
            <class name="com.automation.web.tests.InventoryTest"/>
            <class name="com.automation.web.tests.ItemDetailTest"/>
            <class name="com.automation.web.tests.CartTest"/>
            <class name="com.automation.web.tests.CheckoutTest"/>
        </classes>
    </test>

